{
  "name": "fastify-typescript",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "start": "node build/index.js | pino-pretty --colorize",
    "dev": "nodemon | pino-pretty --colorize",
    "postinstall": "npx typesync && husky install",
    "prisma": "dotenv -e .development.env npx prisma",
    "prisma:gen": "npm run prisma generate",
    "prisma:studio": "npm run prisma studio",
    "prisma:migrate": "npm run prisma migrate dev",
    "prisma:push": "npm run prisma db push",
    "lint": "./node_modules/.bin/eslint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hmake98/fastify-typescript.git"
  },
  "keywords": [],
  "author": "hmake98",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/hmake98/fastify-typescript/issues"
  },
  "homepage": "https://github.com/hmake98/fastify-typescript#readme",
  "dependencies": {
    "@prisma/client": "^3.8.1",
    "@types/bcryptjs": "^2.4.2",
    "aws-sdk": "^2.1058.0",
    "bcryptjs": "^2.4.3",
    "dotenv": "^12.0.3",
    "env-schema": "^3.5.1",
    "fastify": "^3.25.3",
    "fastify-auth": "^1.1.0",
    "fastify-autoload": "^3.10.0",
    "fastify-cli": "^2.14.0",
    "fastify-cors": "^6.0.2",
    "fastify-file-upload": "^3.0.1",
    "fastify-formbody": "^5.2.0",
    "fastify-helmet": "^6.0.0",
    "fastify-jwt": "^4.1.3",
    "fastify-multipart": "^5.3.1",
    "fastify-now": "^2.5.2",
    "fastify-plugin": "^3.0.0",
    "fluent-json-schema": "^3.0.1",
    "http-errors": "^2.0.0",
    "jsonwebtoken": "^9.0.0",
    "pino": "^7.6.3"
  },
  "devDependencies": {
    "@prisma/cli": "2.14.0",
    "@types/eslint": "8.2.2",
    "@types/eslint-plugin-prettier": "3.1.0",
    "@types/http-errors": "1.8.2",
    "@types/jest": "27.4.0",
    "@types/jsonwebtoken": "8.5.7",
    "@types/node": "17.0.8",
    "@types/nodemon": "1.19.1",
    "@types/pino": "7.0.4",
    "@types/prettier": "2.4.3",
    "@typescript-eslint/eslint-plugin": "5.9.1",
    "@typescript-eslint/parser": "5.9.1",
    "cross-env": "7.0.3",
    "eslint": "8.6.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-prettier": "4.0.0",
    "husky": "7.0.4",
    "jest": "27.4.7",
    "lint-staged": "12.1.7",
    "nodemon": "2.0.15",
    "nyc": "15.1.0",
    "pino-pretty": "7.3.0",
    "prettier": "2.5.1",
    "prisma": "3.8.1",
    "tap": "15.1.6",
    "ts-node": "10.4.0",
    "typescript": "4.5.4"
  },
  "prettier": {
    "singleQuote": true,
    "semi": false,
    "trailingComma": "all"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "prettier",
      "prettier/@typescript-eslint"
    ],
    "env": {
      "node": true
    }
  },
  "lint-staged": {
    "*.{js,ts,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run build"
    }
  }
